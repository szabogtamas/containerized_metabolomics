params.input_folder = '../input_data'
params.table_folder = '../tables'
params.figure_folder = '../figures'
params.ttest_tag = 'ttests'
params.mroc_tag = 'mulotiroc'
params.ora_tag = 'ora'
params.msea_tag = 'msea'
params.numcores = 8

profiles {
    standard {
        process.executor = 'local'
    }
    cluster {
        process.executor = 'sge'
        process.cpus = 1
        process.penv = 'smp'
        process.errorStrategy = 'ignore'
    }
}

executor {
    $sge {
        queueSize = 15
        pollInterval = '30sec'
    }
}

process {
    withLabel: manycpu {
        cpus = params.numcores
    }
}
